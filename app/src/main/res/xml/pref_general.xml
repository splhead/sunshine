<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:maxLines="1" />

    <ListPreference
        android:dialogTitle="@string/pref_unit_dialog_title"
        android:key="@string/pref_unit_key"
        android:title="@string/pref_unit_dialog_title"
        android:entries="@array/pref_temperature_unit_entries"
        android:entryValues="@array/pref_temperature_unit_values" />

</PreferenceScreen>
